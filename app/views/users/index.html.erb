<p id="notice"><%= notice %></p>

<h1>Users</h1>

<%=link_to image_tag('ava.png', class: "avatar1") + "My Profile", current_user, class: "btn btn-primary mb-2"%>

<h4>Instructors</h4>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th scope="col">First name</th>
      <th scope="col">Last name</th>
      <th scope="col">Pennkey</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <% @users.each do |user| %>
  <%if user.is_instructor%>
    <tr>
      <td><%=image_tag user.profile_image, class: "avatar"%><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.pennkey %></td>
      <td><%= link_to 'Show', user  %></td>
    </tr>
  <%end%> 
  <% end %>
</table>

<h4>Students</h4>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th scope="col">First name</th>
      <th scope="col">Last name</th>
      <th scope="col">Pennkey</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <% @users.each do |user| %>
  <%if !user.is_instructor%>
    <tr>
      <td><%=image_tag user.profile_image, class: "avatar"%><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.pennkey %></td>
      <td><%= link_to 'Show', user%></td>
    </tr> 
  <%end%>
  <% end %>
</table>
